import = {{ .alacritty.import | quoteList }}

[font]
size = 16

[font.normal]
family = "FiraCode Nerd Font"
style = "Light"

[shell]
program = {{ .alacritty.shell | quote }}

[window]
dynamic_padding = true
opacity = 0.99
{{ if eq .chezmoi.os "darwin" }}
decorations = "Transparent"
option_as_alt = "OnlyLeft"
{{ end }}

[window.padding]
x = 10
y = 10
