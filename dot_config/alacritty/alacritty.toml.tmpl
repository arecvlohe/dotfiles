[general]
import = {{ .alacritty.import | quoteList }}

[font]
size = {{ .alacritty.fontsize }}

[font.normal]
family = "FiraCode Nerd Font"
style = "Light"

[terminal]
shell = {{ .alacritty.shell | quote }}

[window]
dynamic_padding = true
opacity = 0.99
{{ if eq .chezmoi.os "darwin" }}
decorations = {{ .alacritty.decorations }}
option_as_alt = "OnlyLeft"
{{ end }}

[window.padding]
x = 10
y = 10
